@model ControlInventario.Models.DashboardVendedorViewModel
@{
    ViewData["Title"] = "Dashboard Vendedor";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-tachometer-alt"></i> Dashboard Vendedor
        </h1>
        <div>
            <span class="badge bg-info">Vendedor</span>
        </div>
    </div>

    <!-- Bienvenida -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="mb-0">¡Bienvenido, @Model.NombreUsuario!</h4>
                            <p class="mb-0">Aquí tienes un resumen de tu actividad</p>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-circle fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row - Métricas Personales -->
    <div class="row">
        <!-- Mis Ventas Hoy -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Mis Ventas Hoy</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MisVentasHoy</div>
                            <div class="text-xs text-gray-500">@Model.MisVentasHoyMonto.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mis Ventas Semana -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Mis Ventas Semana</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MisVentasSemana</div>
                            <div class="text-xs text-gray-500">@Model.MisVentasSemanaMonto.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-week fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mis Ventas Mes -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Mis Ventas Mes</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MisVentasMes</div>
                            <div class="text-xs text-gray-500">@Model.MisVentasMesMonto.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mi Ticket Promedio -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Mi Ticket Promedio</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MiTicketPromedio.ToString("C")</div>
                            <div class="text-xs text-gray-500">Por venta</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-receipt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row - Métricas Adicionales -->
    <div class="row">
        <!-- Saldo Caja -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Saldo Caja</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SaldoCajaPrincipal.ToString("C")</div>
                            <div class="text-xs text-gray-500">Disponible</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-cash-register fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Productos Activos -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Productos Activos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ProductosActivos</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Productos Bajo Stock -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Bajo Stock</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ProductosBajoStock</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mi Crecimiento Ventas -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Mi Crecimiento Mes</div>
                            <div class="h5 mb-0 font-weight-bold @(Model.MiCrecimientoVentasMes >= 0 ? "text-success" : "text-danger")">
                                @Model.MiCrecimientoVentasMes.ToString("F1")%
                            </div>
                            <div class="text-xs text-gray-500">vs mes anterior</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Accesos Directos -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Accesos Directos</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Create", "Venta")" class="btn btn-primary btn-lg btn-block">
                                <i class="fas fa-plus-circle"></i><br>
                                Nueva Venta
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Venta")" class="btn btn-success btn-lg btn-block">
                                <i class="fas fa-list"></i><br>
                                Mis Ventas
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Producto")" class="btn btn-info btn-lg btn-block">
                                <i class="fas fa-box"></i><br>
                                Inventario
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Caja")" class="btn btn-warning btn-lg btn-block">
                                <i class="fas fa-cash-register"></i><br>
                                Caja
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Mis Productos Más Vendidos -->
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Mis Productos Más Vendidos (Últimos 30 días)</h6>
                </div>
                <div class="card-body">
                    @if (Model.MisProductosMasVendidos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-right">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var producto in Model.MisProductosMasVendidos)
                                    {
                                        <tr>
                                            <td>@producto.Nombre</td>
                                            <td class="text-center">@producto.CantidadVendida</td>
                                            <td class="text-right">@producto.TotalVendido.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted">No tienes ventas registradas</p>
                    }
                </div>
            </div>
        </div>

        <!-- Mis Ventas Recientes -->
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Mis Ventas Recientes</h6>
                </div>
                <div class="card-body">
                    @if (Model.MisVentasRecientes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>N° Venta</th>
                                        <th>Fecha</th>
                                        <th class="text-right">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var venta in Model.MisVentasRecientes)
                                    {
                                        <tr>
                                            <td>@venta.NumeroVenta</td>
                                            <td>@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-right">@venta.Total.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted">No tienes ventas recientes</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
