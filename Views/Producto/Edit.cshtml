@using ControlInventario.Helpers
@model ControlInventario.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
}

<!-- Incluir DateTime Helper -->
<script src="~/js/datetime-helper.js"></script>

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Editar Producto</h1>
        <div>
            <a href="@Url.Action("Details", "Producto", new { id = Model.IdProducto })" class="btn btn-info">
                <i class="fas fa-eye"></i> Ver Detalles
            </a>
            <a href="@Url.Action("Index", "Producto")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Editar Información del Producto</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdProducto" />
                        <input type="hidden" asp-for="FechaCreacion" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Codigo" class="control-label font-weight-bold">Código</label>
                                    <input asp-for="Codigo" class="form-control" placeholder="Ej: PROD001" />
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                    <small class="form-text text-muted">Código único para identificar el producto</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="control-label font-weight-bold">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Paracetamol 500mg" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label font-weight-bold">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" 
                                      placeholder="Descripción detallada del producto..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PrecioIngreso" class="control-label font-weight-bold">Precio de Compra</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Q</span>
                                        </div>
                                        <input asp-for="PrecioIngreso" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="PrecioIngreso" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PrecioVenta" class="control-label font-weight-bold">Precio de Venta</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Q</span>
                                        </div>
                                        <input asp-for="PrecioVenta" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        @{
                                            var margen = Model.PrecioVenta > 0 ? ((Model.PrecioVenta - Model.PrecioIngreso) / Model.PrecioVenta * 100) : 0;
                                        }
                                        Margen actual: @margen.ToString("N1")%
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="StockActual" class="control-label font-weight-bold">Stock Actual</label>
                                    <div class="input-group">
                                        <input asp-for="StockActual" class="form-control" type="number" min="0" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">unidades</span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="StockActual" class="text-danger"></span>
                                    <small class="form-text text-warning">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        Cambiar el stock creará un movimiento de inventario
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="Activo" name="Activo" value="true" 
                                       @(Model.Activo == true ? "checked" : "") />
                                <input name="Activo" type="hidden" value="false" />
                                <label class="form-check-label" for="Activo">
                                    Producto Activo
                                </label>
                            </div>
                            <small class="form-text text-muted">Los productos inactivos no aparecerán en las ventas</small>
                        </div>

                        <!-- Product Info -->
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> Información del Producto</h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>ID:</strong> @Model.IdProducto
                                </div>
                                <div class="col-md-6">
                                    <strong>Fecha de Creación:</strong> @(Model.FechaCreacion != null ? DateTimeHelper.FormatClientDateTime(DateTimeHelper.GetClientDateTime(Model.FechaCreacion)) : "No registrada")
                                </div>
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                            <a href="@Url.Action("Details", "Producto", new { id = Model.IdProducto })" class="btn btn-info ml-2">
                                <i class="fas fa-eye"></i> Ver Detalles
                            </a>
                            <a href="@Url.Action("Index", "Producto")" class="btn btn-secondary ml-2">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Calcular margen de ganancia en tiempo real
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    // Agregar fecha y hora del cliente al formulario
                    DateTimeClientHelper.addClientDateTimeToForm(form);
                    console.log('Fecha del cliente agregada al formulario de edición de producto');
                });
            }
            
            // Calcular margen de ganancia
            const precioIngreso = document.getElementById('PrecioIngreso');
            const precioVenta = document.getElementById('PrecioVenta');
            
            function calcularMargen() {
                const ingreso = parseFloat(precioIngreso.value) || 0;
                const venta = parseFloat(precioVenta.value) || 0;
                
                if (venta > 0) {
                    const margen = ((venta - ingreso) / venta * 100).toFixed(1);
                    const margenText = document.createElement('small');
                    margenText.className = 'form-text text-info';
                    margenText.innerHTML = `<i class="fas fa-chart-line"></i> Margen: ${margen}%`;
                    
                    // Eliminar margen anterior si existe
                    const oldMargen = precioVenta.parentNode.parentNode.querySelector('.text-info');
                    if (oldMargen) {
                        oldMargen.remove();
                    }
                    
                    // Agregar nuevo margen
                    precioVenta.parentNode.parentNode.appendChild(margenText);
                }
            }
            
            precioIngreso.addEventListener('input', calcularMargen);
            precioVenta.addEventListener('input', calcularMargen);
            
            // Calcular margen inicial
            calcularMargen();
        });
    </script>
}
