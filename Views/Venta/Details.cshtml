@using ControlInventario.Helpers
@model ControlInventario.Models.Ventum
@{
    ViewData["Title"] = "Detalles de Venta";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Detalles de Venta</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
            @if (Model.Anulada != true)
            {
                <a asp-action="Delete" asp-route-id="@Model.IdVenta" class="btn btn-danger">
                    <i class="fas fa-times"></i> Anular Venta
                </a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Información de la Venta</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Número de Venta:</label>
                                <p>@Model.NumeroVenta</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Fecha:</label>
                                <p>@DateTimeHelper.FormatClientDateTime(DateTimeHelper.GetClientDateTime(Model.Fecha), "dd/MM/yyyy HH:mm:ss")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Usuario:</label>
                                <p>@Model.IdUsuarioNavigation?.Nombre</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="font-weight-bold">Estado:</label>
                                <p>
                                    @if (Model.Anulada == true)
                                    {
                                        <span class="badge badge-danger">Anulada</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">Activa</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Resumen</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-bold">Subtotal:</label>
                        <p class="h5">Q @Model.Subtotal.ToString("N2")</p>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Total:</label>
                        <p class="h4 text-primary font-weight-bold">Q @Model.Total.ToString("N2")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Productos Vendidos</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-right">Precio Unitario</th>
                            <th class="text-right">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.DetalleVenta != null)
                        {
                            @foreach (var detalle in Model.DetalleVenta)
                            {
                                <tr>
                                    <td>@detalle.IdProductoNavigation?.Nombre</td>
                                    <td class="text-center">@detalle.Cantidad</td>
                                    <td class="text-right">Q @detalle.PrecioUnitario.ToString("N2")</td>
                                    <td class="text-right font-weight-bold">Q @detalle.Subtotal.ToString("N2")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No hay productos registrados para esta venta</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="bg-light">
                            <th colspan="3" class="text-right">Total:</th>
                            <th class="text-right font-weight-bold text-primary">Q @Model.Total.ToString("N2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        padding: 0.5em 0.75em;
        font-size: 0.75em;
    }
    .badge-success {
        background-color: #28a745;
    }
    .badge-danger {
        background-color: #dc3545;
    }
    .table th {
        background-color: #f8f9fa;
        color: #17a2b8;
        font-weight: 600;
        border-top: none;
    }
    .card {
        border: 1px solid #e9ecef;
    }
    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e9ecef;
    }
    .form-group label {
        color: #495057;
        margin-bottom: 0.25rem;
    }
    .form-group p {
        margin-bottom: 0.5rem;
        color: #212529;
    }
</style>
