@using ControlInventario.Helpers
@model IEnumerable<ControlInventario.Models.MovimientoCaja>
@{
    ViewData["Title"] = "Movimientos de Caja";
    var caja = ViewBag.Caja as ControlInventario.Models.Caja;
    var fechaInicio = ViewBag.FechaInicio as DateTime?;
    var fechaFin = ViewBag.FechaFin as DateTime?;
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-list"></i> Movimientos de Caja
        </h1>
        <div>
            <a href="@Url.Action("Agregar", "Caja")" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Agregar
            </a>
            <a href="@Url.Action("Retirar", "Caja")" class="btn btn-danger">
                <i class="fas fa-minus-circle"></i> Retirar
            </a>
            <a href="@Url.Action("Index", "Caja")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <!-- Date Filters -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-filter"></i> Filtros de Fecha
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Movimientos" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="fechaInicio" class="form-label">Fecha Inicio</label>
                    <input type="date" name="fechaInicio" id="fechaInicio" class="form-control" 
                           value="@(fechaInicio?.ToString("yyyy-MM-dd") ?? "")" />
                </div>
                <div class="col-md-4">
                    <label for="fechaFin" class="form-label">Fecha Fin</label>
                    <input type="date" name="fechaFin" id="fechaFin" class="form-control" 
                           value="@(fechaFin?.ToString("yyyy-MM-dd") ?? "")" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Filtrar
                    </button>
                    <a href="@Url.Action("Movimientos")" class="btn btn-secondary me-2">
                        <i class="fas fa-calendar-alt"></i> Ver Todos
                    </a>
                    <button type="button" class="btn btn-info ms-2" onclick="setToday()">
                        <i class="fas fa-calendar-day"></i> Hoy
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Ingresos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                Q @Model.Where(m => m.TipoMovimiento?.ToUpper() == "I").Sum(m => m.Monto).ToString("N2")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-down fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Total Egresos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                Q @Model.Where(m => m.TipoMovimiento?.ToUpper() == "E").Sum(m => m.Monto).ToString("N2")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-up fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Saldo Actual
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                Q @caja?.SaldoActual.ToString("N2")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-balance-scale fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Movements Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-history"></i> Historial Completo de Movimientos
            </h6>
            <span class="badge bg-info">
                @Model.Count() movimientos
            </span>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="fas fa-receipt fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">No hay movimientos registrados</h5>
                    <p class="text-gray-400">Comienza agregando efectivo a la caja</p>
                    <a href="@Url.Action("Agregar", "Caja")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Agregar Primer Movimiento
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th class="text-center">ID</th>
                                <th>Fecha y Hora</th>
                                <th class="text-center">Tipo</th>
                                <th class="text-right">Monto</th>
                                <th>Concepto</th>
                                <th>Usuario</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">@item.IdMovimientoCaja</span>
                                    </td>
                                    <td>
                                        <div>@DateTimeHelper.FormatClientDateTime(DateTimeHelper.GetClientDateTime(item.Fecha), "dd/MM/yyyy")</div>
                                        <small class="text-muted">@DateTimeHelper.FormatClientDateTime(DateTimeHelper.GetClientDateTime(item.Fecha), "HH:mm:ss")</small>
                                    </td>
                                    <td class="text-center">
                                        @if (item.TipoMovimiento?.ToUpper() == "I")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-arrow-down"></i> Ingreso
                                            </span>
                                        }
                                        else if (item.TipoMovimiento?.ToUpper() == "E")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-arrow-up"></i> Egreso
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-exchange-alt"></i> @item.TipoMovimiento
                                            </span>
                                        }
                                    </td>
                                    <td class="text-right">
                                        @if (item.TipoMovimiento?.ToUpper() == "I")
                                        {
                                            <span class="text-success fw-bold">+Q @item.Monto.ToString("N2")</span>
                                        }
                                        else if (item.TipoMovimiento?.ToUpper() == "E")
                                        {
                                            <span class="text-danger fw-bold">-Q @item.Monto.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-primary fw-bold">Q @item.Monto.ToString("N2")</span>
                                        }
                                    </td>
                                    <td>
                                        <div>@item.Concepto</div>
                                        @if (item.IdReferencia.HasValue)
                                        {
                                            <small class="text-muted">Ref: #@item.IdReferencia</small>
                                        }
                                    </td>
                                    <td>
                                        <div>@item.IdUsuarioNavigation?.Nombre</div>
                                        <small class="text-muted">ID: @item.IdUsuario</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "Caja", new { id = item.IdMovimientoCaja })" 
                                               class="btn btn-info btn-sm" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr class="fw-bold">
                                <td colspan="3" class="text-end">TOTALES:</td>
                                <td class="text-right">
                                    <div class="text-success">+Q @Model.Where(m => m.TipoMovimiento?.ToUpper() == "I").Sum(m => m.Monto).ToString("N2")</div>
                                    <div class="text-danger">-Q @Model.Where(m => m.TipoMovimiento?.ToUpper() == "E").Sum(m => m.Monto).ToString("N2")</div>
                                    <hr class="my-1">
                                    <div class="text-primary">Q @caja?.SaldoActual.ToString("N2")</div>
                                </td>
                                <td colspan="3"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setToday() {
            // Obtener fecha local actual en formato YYYY-MM-DD
            const today = new Date();
            const year = today.getFullYear();
            const month = String(today.getMonth() + 1).padStart(2, '0');
            const day = String(today.getDate()).padStart(2, '0');
            const todayString = `${year}-${month}-${day}`;
            
            document.getElementById('fechaInicio').value = todayString;
            document.getElementById('fechaFin').value = todayString;
        }

        $(document).ready(function() {
            // DataTable no está disponible, eliminado para evitar errores
            // Si se necesita DataTable en el futuro, agregar el CDN correspondiente
            console.log('Página de movimientos de caja cargada correctamente');
        });
    </script>
}
